{
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.3",
    "php-stubs/wordpress-stubs": "^6.1",
    "php-stubs/woocommerce-stubs": "^7.2",
    "wpify/scoper": "3.1.3"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "wpify/scoper": true
    }
  },
  "autoload": {
    "psr-4": {
      "Krokedil\\Klarna\\": "src/"
    }
  },
  "extra": {
    "wpify-scoper": {
      "prefix": "KrokedilKlarnaPaymentsDeps",
      "folder": "dependencies",
      "autorun": true,
      "globals": [
        "wordpress",
        "woocommerce"
      ]
    }
  },
  "minimum-stability": "dev",
  "scripts": {
    "lint": "vendor/bin/phpcs . --standard=phpcs.ruleset.xml --extensions=php -q",
    "lint:fix": "vendor/bin/phpcbf . --standard=phpcs.ruleset.xml --extensions=php -q",
    "lint:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcs --standard=phpcs.ruleset.xml --extensions=php -q",
    "lint:fix:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcbf --standard=phpcs.ruleset.xml --extensions=php -q"
  }
}
